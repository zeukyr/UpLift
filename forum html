<body>
  <div class="navbar">
    <div class="nav-left">
        <a href="#">HOME</a>
        <a href="#">ABOUT</a>
        <a href="./Forum.html">FORUM</a>
    </div>
    <div class="nav-right">
      <button onclick="logIn()">Log In</button>
    </div>
  </div>
  <div class="searchbar">
    <input type="text" list="universities" id="university" placeholder="SEARCH COLLEGE/UNIVERSITY FORUMS..." onEnter="openForum()">
      <datalist id="universities">
        <option value="University of Calgary"></option>
        <option value="Rice University"></option>
        <option value="King's College"></option>
        <option value="University of Sydney"></option>
      </datalist>
    <button id="btn" onclick="openForum()">GO</button>
  </div>
  <script>
    let input = document.getElementById("university");
    input.addEventListener("keypress", function(event) {
      if (event.key === "Enter") {
        document.getElementById("btn").click();
      }
    });
    function openForum() {
      let x = document.getElementById("university").value;

      if (x==="University of Calgary") {
        window.open("/UniversityofCalgary.html","_self");
      } else if (x==="Rice University") {
        window.open("/RiceUniversity.html","_self");
      } else if (x==="King's College") {
        window.open("/King'sCollege.html","_self");
      } else if (x==="University of Sydney") {
        window.open("/UniversityofSydney.html","_self");
      }
    }
  </script>
  <div class="feedback">
    <p>Don't see your college or university? Click <a class="link" href="./Feedback.html">here</a> to let us know!</p>
